<script type="text/javascript">
$(document).ready(function(){
	$("#clicame").click(function(){ $("#bnn2").slideToggle(); });
});

$(document).ready(function(){
	$("#escondido-1").click(function(){ $("#escondido-0").slideToggle(); });
});
</script>

<div class="block notice">
  <h3>News</h3>
  <div class="content">
    <p>Hello, <%= @user.email %></p>
	<p style="color: red; text-decoration:blink">Warning!</p>
	<p>
		<a href="javascript:myfunction();" id="clicame">hide/show last searches</a>
	</p>
  </div>
</div>

<div id="bnn2" class="block notice">
  <table id="hor-minimalist-a" summary="last search sheet">
    <thead>
	  <th scope="col">Type</th>
	  <th scope="col">Date</th>
	  <th scope="col">User</th>
	  <th scope="col"></th>
	</thead>
	<tbody>
	<% @searches.last(4).each do |procu| %>
	  <tr>
		<td><%= procu.tipo %></td>
		<td><%= procu.date %></td>
		<td><%= procu.user_id %></td>
		<td><%= link_to 'edit', root_path %></td>
	  </tr>
	<% end %>
	</tbody>	
  </table>
</div>

<div class="block">
  <h3>Pesquisa</h3>
  <ul class="navigation">
    <li><%= link_to 'Tabelas', root_path %></li>
    <li id="escondido-1">
		<a href="javascript:myfunction();">Charts</a>
		<ul id="escondido-0" class="nested-list" style="display:none;">
			<li> <%= link_to 'Column type', graphicscolumns_path %> </li>
			<li> <%= link_to 'Linear type', graphicslinear_path %> </li>
			<li> <%= link_to 'Area type', graphicsarea_path %> </li>
			<li> <%= link_to 'Pie type', graphicspie_path %> </li>
		</ul>
	</li>
  </ul>
</div>

