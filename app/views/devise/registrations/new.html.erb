<h1>Delusion HoneyPot</h1>

<div class="block" id="block-signup">
  <h2>Sign up</h2>
  <div class="content">
	<div class="flash">
	  <% flash.each do |type, message| %>
	  <div class="message <%= type %>">
		<p><%= message %></p>
	  </div>
	  <% end %>
	</div>
	
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form login" }) do |f| %>
      <div class="group">
        <%= f.label :email, :class => "label" %>
        <%= f.text_field :email , :class => "text_field"%>
        <span class="description">Ex: black_spider@web.com</span>
      </div>
      
      <div class="group">
        <%= f.label :password, :class => "label" %>
        <%= f.password_field :password, :class => "text_field" %>
        <span class="description">Must be at least 6 characters</span>
      </div>

	  <div class="group">
        <%= f.label :password_confirmation, "Re-enter password", :class => "label" %>
        <%= f.password_field :password_confirmation, :class => "text_field" %>
      </div>

	  <div class="group navform wat-cf">
		    <button class="button" type ="submit">
			<%= image_tag "web-app-theme/themes/default/images/tick.png"%> Sign up
			</button>
      </div>
    <% end %>
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
